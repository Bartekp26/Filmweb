<UserControl x:Class="Filmweb.View.AddReviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Filmweb.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             Background="Black">
    <Grid Margin="40">
        <StackPanel>
            <TextBlock Text="Dodaj opinię"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="Orange"
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="-5,5,0,10">
                <Label Content="Ocena (0-10):" Foreground="White" VerticalAlignment="Center" Width="100"/>

                <xctk:IntegerUpDown
                        Value="{Binding Rating}"
                        Minimum="0"
                        Maximum="10"
                        Increment="1"
                        Width="50"
                        PreviewTextInput="IntegerUpDown_PreviewTextInput"
                        DataObject.Pasting="IntegerUpDown_Pasting"
                        ValueChanged="IntegerUpDown_ValueChanged"/>
            </StackPanel>

            <TextBlock Text="Treść opinii:" Foreground="White"/>
            <TextBox Text="{Binding Content}" AcceptsReturn="True" Height="150" TextWrapping="Wrap" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj"
                        Width="100"
                        Margin="0,0,10,0"
                        Background="Gray"
                        Foreground="White"
                        Command="{Binding CancelCommand}" />
                <Button Content="Dodaj"
                        Width="100"
                        Background="Orange"
                        Foreground="Black"
                        FontWeight="Bold"
                        Command="{Binding SubmitCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>