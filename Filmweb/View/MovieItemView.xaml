<UserControl x:Class="Filmweb.View.MovieItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="180" Height="320" Background="Transparent" Margin="4,0">

    <Border Margin="5" CornerRadius="5" BorderBrush="DarkGray" BorderThickness="1" Background="#111">
        <Border.Effect>
            <DropShadowEffect Color="#FFD200"  
                         BlurRadius="18"
                      ShadowDepth="0"
                      Opacity="0.6"/>
        </Border.Effect>

        <Grid Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>

                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>

 
            <Image Grid.Row="0" Grid.Column="0"
                   Source="{Binding ImageUrl}"
                   Width="80" Height="110"
                   Stretch="UniformToFill"
                   Margin="0,0,10,0"
                   VerticalAlignment="Top"/>
            <StackPanel Grid.Row="0" Grid.Column="1"
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                <TextBlock Text="{Binding Rating, StringFormat={}{0:N1}/10}"
                           FontWeight="Bold"
                           Foreground="White"
                           FontSize="13"
                           Margin="0,0,0,2"/>
                <TextBlock Text="{Binding UserRating, StringFormat={}{0:N1}/10}"
                           FontWeight="Bold"
                           Foreground="Orange"
                           FontSize="13"
                           Visibility="{Binding HasUserRating, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                       Text="{Binding Title}"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"/>
            <TextBlock Grid.Row="2" Grid.ColumnSpan="2"
                       Text="{Binding GenresAsText}"
                       FontSize="14"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,2,0,0"/>
            <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
                           Text="{Binding Description}"
                           FontSize="12"
                           Foreground="Gray"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap"
                           MaxHeight="48"
                           Margin="0,2,0,0"/>

            

            <Button Grid.Row="5" Grid.ColumnSpan="2"
                    Content="Zobacz"
                    Width="100"
                    HorizontalAlignment="Center"
                    Padding="4"
                    Background="Orange"
                    Foreground="Black"
                    FontWeight="SemiBold"
                    Margin="0,6,0,0"/>
        </Grid>
    </Border>
</UserControl>
